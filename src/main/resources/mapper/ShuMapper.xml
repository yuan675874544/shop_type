<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.fh.api.type.shop_type.dao.ShuDao">
<select id="queryCount" parameterType="com.fh.api.type.shop_type.utils.ShuVO" resultType="java.lang.Integer">

      select count(*) from t_shuxing

</select>
    <select id="queryDataByVo" parameterType="com.fh.api.type.shop_type.utils.PinVO" resultType="com.fh.api.type.shop_type.model.ShuXing">
        select * from  t_shuxing where  1=1

          limit ${size*(current-1)},#{size}
    </select>
 </mapper>
